<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN"
    "http://getahead.org/dwr/dwr20.dtd">
<dwr>
	<allow>
		<convert converter="bean" match="org.sig.core.bo.TestBean">
		</convert>
		
	    <convert converter="bean" match="org.sig.web.Form.Query">
		</convert>
		
	    <convert converter="bean" match="org.sig.core.bo.Post">
		</convert>
		
        <convert converter="bean" match="org.sig.core.bo.PostClass">
		</convert>
		
	   <convert converter="bean" match="org.sig.core.bo.SrcWebsite">
		</convert>
		
		<create creator="spring" javascript="TestAction" scope="request">
			<param name="beanName" value="TestAction" />
		</create>
		
		 <create creator="spring" javascript="PostManageAction" scope="request">
			<param name="beanName" value="PostManageAction" />
		</create>
		
		<create creator="spring" javascript="UserManageAction" scope="request">
			<param name="beanName" value="UserManageAction" />
		</create>
		
		<create creator="spring" javascript="ControllerAction" scope="request">
			<param name="beanName" value="ControllerAction" />
		</create>

	</allow>
</dwr>
